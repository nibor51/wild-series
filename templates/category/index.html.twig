{% extends 'base.html.twig' %}


{% block title %}All categories{% endblock %}


{% block body %}

    <h1>Toutes les catégories de la table category : </h1>

    {% for category in categories %}

    <div>
        {# Lien vers les série de la catégorie #}
        <a href="{{ path("category_show", { categoryName: category.name }) }}" class="btn btn-primary">{{ category.name }}</a>

    </div>

    {% else %}

        Aucune série trouvée.

    {% endfor %}


    <a href="{{ path('app_index') }}" class="btn btn-primary">

        Retour à l'accueil

    </a>

{% endblock %}