{% extends 'base.html.twig' %}


{% block title %}All programs{% endblock %}


{% block body %}

    <h1>Toutes les séries de la table program : </h1>

    {% for program in programs %}

        <div>

            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>

            <p>{{ program.summary }}</p>

            {# Lien vers la fiche de la série #}
            <a href="{{ path("program_show", { slug: program.slug }) }}" class="btn btn-primary">Voir la fiche</a>

        </div>

    {% else %}

        Aucune série trouvée.

    {% endfor %}

    <a href="{{ path('program_new') }}" class="btn btn-primary">
        Ajouter un program
    </a>
    <a href="{{ path('app_index') }}" class="btn btn-primary">
        Retour à l'accueil
    </a>

{% endblock %}