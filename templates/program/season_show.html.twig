{% extends "base.html.twig" %}

{% block title %}
    {{ program.title }} - Season {{ season.number }}
{% endblock %}

{% block body %}
    <h1>Série {{ program.title }} - Season #{{ season.number }}</h1>
    <p>
        {{ season.description }}
    </p>
    <h2>Episodes</h2>
    <ul>
        {% for episode in season.episodes %}
            <li>
               <a href="{{ path('program_episode_show', {'programId': program.slug, 'seasonId': season.slug, 'episodeId': episode.slug}) }}">Épisode {{ episode.number }} : {{ episode.title }}</a>
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path('program_show', {'slug': program.slug}) }}" class="btn btn-primary">
        Retour à la fiche de la série
    </a>
{% endblock %}
